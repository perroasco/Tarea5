<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical" android:layout_gravity="center">
    <TextView
            android:text="R= "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textViewSeek1" android:layout_gravity="start"
            android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_margin="20dp"
            android:textSize="30"/>
    <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/seekBar" android:layout_gravity="center"
            android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_margin="20dp"
            android:max="255"/>


    <TextView
            android:text="G= "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textViewSeek2" android:layout_gravity="start"
            android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_margin="20dp"/>
    <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/seekBar2" android:layout_gravity="center"
            android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_margin="20dp"
            android:max="255"/>


    <TextView
            android:text="B= "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textViewSeek3" android:layout_gravity="start"
            android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_margin="20dp"/>
    <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/seekBar3" android:layout_gravity="center"
            android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_margin="20dp"
            android:max="255"/>


    <TextView
            android:text="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="355dp"
            tools:layout_editor_absoluteX="175dp" android:id="@+id/hex" android:layout_gravity="center"
            android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_margin="20dp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="250dp" android:id="@+id/view2"
            android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_margin="20dp"
            android:background="@android:color/background_dark"/>
</LinearLayout>